<% layout("/layout/basic") %>

    <%- include("../includes/categories.ejs") %>

        <%if(listing<=0){%>
            <h4>No Listing To Show In This Category</h4>
            <%}%>
                <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-1 ">
                    <%for(let list of listing){%>
                        <a href="/listings/<%=list._id%>" class="inserting_list">
                            <div class="card col listing-card" style="height: 20rem; width: 17rem;">
                                <img src="<%=list.image.url%>" class="card-img-top" alt="lising_image"
                                    style="height: 15rem;">
                                <div class="card-img-overlay"></div>
                                <div class="card-body">
                                    <p class="card-text">
                                        <b>
                                            <%=list.title%>
                                        </b> <br>
                                        <span>Rs.</span>
                                        <%=list.price%> / Night
                                    </p>
                                </div>
                            </div>

                        </a>
                        <% } %>
                </div>